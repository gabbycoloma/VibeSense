<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:contentPadding="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    tools:context=".Home"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="10dp">
        <ImageView
            android:id="@+id/mood_emoji"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:contentDescription="Emoji of mood"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/mood_name"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mood_emoji"/>
        <TextView
            android:id="@+id/mood_desc"
            android:layout_width="236dp"
            android:layout_height="43dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:textColor="#263228"
            app:layout_constraintTop_toBottomOf="@id/mood_name"
            app:layout_constraintStart_toEndOf="@id/mood_emoji"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:textAlignment="textEnd"
            android:textColor="#263228"
            app:layout_constraintTop_toBottomOf="@id/mood_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/baseline_arrow_circle_right_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>